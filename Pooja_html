<script>
  // debugging helper: рдЕрдЧрд░ рдЗрдореЗрдЬ рдирд╣реАрдВ рдорд┐рд▓реА рддреЛ рдпреВрдЬрд░ рдХреЛ рдмрддрд╛рдирд╛
  const filesToCheck = [
    {id:'mainImg', name:'maa_pooja.jpg'},
    {id:'t1', name:'maa_laxmi.jpg'},
    {id:'t2', name:'maa_saraswati.jpg'},
    {id:'t3', name:'ganesh.jpg'},
    {id:'t4', name:'hanuman.jpg'},
  ];

  function checkImages() {
    const errors = [];
    filesToCheck.forEach(f=>{
      const img = document.getElementById(f.id);
      // рдпрджрд┐ image-load fail рд╣реБрдЖ рддреЛ naturalWidth 0 рд╣реЛрдЧрд╛
      img.addEventListener('error', ()=> {
        errors.push(f.name);
        updateMsg();
      });
      img.addEventListener('load', ()=> {
        // рд╕рдлрд▓ рд▓реЛрдб
      });
      // рдпрджрд┐ рдкрд╣рд▓реЗ рд╕реЗ рд╣реА attempt рд╣реЛ рдЪреБрдХрд╛ рд╣реИ, рдЪреЗрдХ рдХрд░ рд▓реЗрдВ
      setTimeout(()=> {
        if(img.naturalWidth === 0) {
          // broken
          if(!errors.includes(f.name)) errors.push(f.name);
          updateMsg();
        }
      }, 600);
    });

    function updateMsg(){
      const el = document.getElementById('msg');
      if(errors.length===0) {
        el.textContent = '';
      } else {
        el.innerHTML = "рдХреГрдкрдпрд╛ рдпреЗ рдлрд╝рд╛рдЗрд▓реЗрдВ рдЙрд╕реА рдлреЛрд▓реНрдбрд░ рдореЗрдВ рд░рдЦреЗрдВ (рдпрд╛ рд╕рд╣реА рдирд╛рдо рджреЗрдХрд░ рджреЗрдЦреЗрдВ):<br><strong>"+errors.join(', ')+"</strong>";
      }
    }
  }

  // рдкреЗрдЬ load рдкрд░ рдЪреЗрдХ рдХрд░реЗрдВ
  window.addEventListener('load', checkImages);
